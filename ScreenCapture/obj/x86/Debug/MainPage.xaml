
<Page
    x:Class="ScreenCapture.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:ScreenCapture"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    Width="1230"
    Height="787"
    muxc:BackdropMaterial.ApplyToRootOrPageBackground="True"
    mc:Ignorable="d">

    <Page.Resources>
        <SolidColorBrush x:ConnectionId='2' x:Name="OutputPathStatusIconColor" />
    </Page.Resources>

    <Grid>

        <muxc:NavigationView x:ConnectionId='3'
            x:Name="MainNavView"
            Header="Screen Capture"
                                                           >
            <muxc:NavigationView.MenuItems>
                <muxc:NavigationViewItem
                    Content="Player"
                    Icon="Play"
                    Tag="PlayerPage" />
                <muxc:NavigationViewItem
                    Content="Capture Gallery"
                    Icon="AllApps"
                    Tag="CapturePage" />
            </muxc:NavigationView.MenuItems>

            <StackPanel
                Margin="24"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Orientation="Vertical"
                Spacing="16">

                <StackPanel Orientation="Vertical" Spacing="6">
                    <TextBlock>Output Directory</TextBlock>
                    <StackPanel x:ConnectionId='6'
                        x:Name="OutputPathLayout"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Orientation="Horizontal"
                        Spacing="3">
                        <TextBox x:ConnectionId='7'
                            x:Name="OutputPathTextBox"
                            Width="320"
                            VerticalAlignment="Center"
                                                             
                            RenderTransformOrigin="0.5,0.5"
                            Text=""
                            TextWrapping="Wrap">
                            <TextBox.RenderTransform>
                                <CompositeTransform ScaleY="1" />
                            </TextBox.RenderTransform>
                        </TextBox>
                        <Button x:ConnectionId='8'
                            x:Name="OutputPathBrowse"
                                                          
                            ClickMode="Press"
                            Content="Browse..." />
                    </StackPanel>
                </StackPanel>

                <StackPanel Spacing="6">
                    <TextBlock HorizontalAlignment="Left" VerticalAlignment="Center">Codec</TextBlock>
                    <ComboBox>
                        <ComboBoxItem Content="MP4" />
                        <ComboBoxItem Content="WebM" />
                    </ComboBox>
                </StackPanel>

                <StackPanel Orientation="Vertical" Spacing="6">
                    <TextBlock>Framerate</TextBlock>
                    <StackPanel
                        VerticalAlignment="Center"
                        Orientation="Horizontal"
                        Spacing="12">

                        <Slider x:ConnectionId='4'
                            x:Name="FPSSlider"
                            Width="320"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Center"
                            Maximum="60"
                            Minimum="15"
                            TickFrequency="5"
                                                                  />
                        <TextBlock x:ConnectionId='5' x:Name="FPSTextBlock" VerticalAlignment="Center" />
                    </StackPanel>
                </StackPanel>
            </StackPanel>

        </muxc:NavigationView>
    </Grid>
</Page>


